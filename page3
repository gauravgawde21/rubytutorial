class Customer
   @@no_of_customers=0
end

cust1 = Customer. new
cust2 = Customer. new

class Customer
   #Class Variable
   @@no_of_customers=0
   def initialize(id, name, addr)
      #Instance Variables
      @cust_id=id
      @cust_name=name
      @cust_addr=addr
   end
end

cust1=Customer.new("1", "John", "Wisdom Apartments, Ludhiya")
cust2=Customer.new("2", "Poul", "New Empire road, Khandala")

